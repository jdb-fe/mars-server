{
    "name": "mars-server",
    "version": "1.0.0",
    "description": "mars frontend news server",
    "scripts": {
        "format": "prettier --write \"**/*.ts\"",
        "start": "ts-node src/main.ts",
        "start:dev": "nodemon",
        "prestart:prod": "rm -rf dist && tsc",
        "start:prod": "node dist/main.js",
        "deploy": "pm2 deploy production update",
        "test": "jest",
        "test:cov": "jest --coverage",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "commitmsg": "commitlint -e $GIT_PARAMS"
    },
    "dependencies": {
        "@nestjs/common": "^4.6.6",
        "@nestjs/core": "^4.6.6",
        "@nestjs/testing": "^4.6.6",
        "@nestjs/typeorm": "^2.0.0",
        "axios": "^0.18.0",
        "cheerio": "^1.0.0-rc.2",
        "class-transformer": "^0.1.9",
        "class-validator": "^0.8.5",
        "express": "^4.16.3",
        "jsonwebtoken": "^8.2.1",
        "moment": "^2.22.1",
        "mysql": "^2.15.0",
        "node-schedule": "^1.3.0",
        "nodemailer": "^4.6.4",
        "passport": "^0.4.0",
        "passport-jwt": "^4.0.0",
        "pug": "^2.0.3",
        "puppeteer": "^1.3.0",
        "reflect-metadata": "^0.1.12",
        "rxjs": "^5.5.10",
        "showdown": "^1.8.6",
        "striptags": "^3.1.1",
        "turndown": "^4.0.1",
        "turndown-plugin-gfm": "^1.0.1",
        "typeorm": "^0.2.1",
        "typescript": "^2.8.3",
        "wechat": "^2.1.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^6.1.3",
        "@commitlint/config-conventional": "^6.1.3",
        "@types/cheerio": "^0.22.7",
        "@types/express": "^4.11.1",
        "@types/jest": "^22.2.3",
        "@types/node": "^9.6.6",
        "@types/passport-jwt": "^3.0.1",
        "@types/puppeteer": "^1.2.2",
        "@types/supertest": "^2.0.4",
        "husky": "^0.14.3",
        "jest": "^23.0.0-alpha.0",
        "nodemon": "^1.17.3",
        "prettier": "^1.12.1",
        "supertest": "^3.0.0",
        "ts-jest": "^22.4.4",
        "ts-node": "^6.0.0",
        "tslint": "5.9.1"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "../coverage"
    },
    "engines": {
        "node": ">=8.9.0"
    },
    "repository": {
        "type": "git",
        "url": ""
    },
    "author": "bukas",
    "license": "MIT"
}
